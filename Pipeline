pipeline
{
    agent
    {
        label 'ansible1'
    }
    stages
    {
        stage ('cd')
        {
            steps
            {
                git 'https://github.com/sriram-git-6/pipeline-practice.git'
            }
        }
        stage('check for java version')
        {
            steps
            {
                sh 'sudo java --version'
                
            }
        }
        stage('check for tomcat')
        {
            steps
            {
                sh 'systemctl status tomcat'
            }
        }
        stage('print echo')
        {
            steps
            {
                echo "hello sriram"
            }
        }
    }
}